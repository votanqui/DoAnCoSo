
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .admin-menu {
            background-color: #343a40; /* Màu nền tối */
            color: #fff; /* Màu chữ trắng */
            min-height: 100vh;
            overflow-y: auto;
        }
            .admin-menu a {
                display: block;
                padding: 10px;
                color: #fff;
                text-decoration: none;
            }
                .admin-menu a:hover {
                    background-color: #495057; 
                }
        .admin-content {
            padding: 20px;
            background-color: #f8f9fa; 
            color: #212529; 
        }
        body {
            font-family: Arial, sans-serif;
            font-size: 16px;
        }
        .admin-menu h4 {
            font-size: 1.25rem; 
        }
        .admin-menu a {
            font-size: 1rem; 
        }
    </style>
    @RenderSection("myCustomScripts", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 admin-menu">
                <h4>Admin Panel</h4>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("doanhthu", "Admin")">Doanh Thu </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ThongKe", "Admin")">Lịch Sử Mua </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Admin")">Quản lý thành viên</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("listacc", "Admin")">Quản lý tài khoản game</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Logout", "Admin")">Đăng xuất</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-10 admin-content">
                @RenderBody()
                @RenderSection("upload", required: false)

            </div>
        </div>
    </div>
</body>
</html>

